

<%= div_for(comment) do %>

<div class="well">
 <div class="row">
		<div class="col-sm-12">
  <div class="pull-left">
    <p class="lead"><%= comment.body %></p>
  </div>
  </div>
  </div>


  <div class="row">
		<div class="col-sm-6">
			<p><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong></small></p>
		</div>
		<div class="col-sm-4">
		</div>
	  <div class="col-sm-2">
	    <% if comment.user == current_user -%>
	    <%= link_to 'Remove', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm remove" %>
	    <% end %>
	  </div>
  </div>
</div>


<% end %>