<div class="row">
<%= link_to 'Back', root_path, class: 'btn btn-default glyphicon glyphicon-chevron-left blue' %>
</div>

<div class="col-md-9 ">
  <div class="panel panel-primary">

    <div class="page-header">
     <h1><a href="<%= @link.url %>" target="_blank"><%= @link.title %></a><br></small></h1>
   </div>


   <div class="btn-group">
     <%= link_to 'Visit URL', @link.url, target:"_blank", class: "btn btn-primary" %>
   </div>




   <div class="btn-group pull-right">
    <%= link_to like_link_path(@link), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    Upvote
    <%= @link.get_upvotes.size %>
    <% end %>
    <%= link_to dislike_link_path(@link), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-down">
      Downvote
      <%= @link.get_downvotes.size %>
      <% end %>
    </div>



    <div class="btn-group">
      <%= link_to 'Edit', edit_link_path(@link), class: "btn btn-default" %>
      <%= link_to 'Remove', @link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
    </div>


    
   
     <%= simple_form_for [@link, Comment.new]  do |f| %>
    <div class="well comment-form">
      <div class="field">
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <br>
      <%= f.submit "Add Comment", class: "btn btn-primary" %>
      <% end %>
    </div>

     <h3 class="comments_title">
      <%= @link.comments.count %> Comments
    </h3>
    <div id="comments">
      <%= render :partial => @link.comments.reverse %>
    </div>

   
  </div>
</div>



